<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/brow_home_list_item"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/home_player_websites_item_height"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants" 
    android:background="@drawable/searchranking_selector_1">

    <ImageView
        android:id="@+id/brow_home_list_item_icon"
        android:layout_width="22dip"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_default_brow_home_list" />

    <LinearLayout
        android:id="@+id/brow_home_list_item_right_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:orientation="vertical">

            <TextView
                android:id="@+id/brow_home_list_item_name"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
            	android:paddingLeft="5.0dip"
            	android:paddingRight="15.0dip"
            	android:gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="#ff333333"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/brow_home_list_item_address"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
            	android:paddingRight="15.0dip"
            	android:paddingLeft="5.0dip"
            	android:gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/normal_textcolor_gray"
                android:textSize="17dip" />
    </LinearLayout>

</LinearLayout>