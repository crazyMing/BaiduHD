<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
        android:layout_width="180dip" 
        android:layout_height="45dip"
        android:orientation="horizontal"
        >
    <ImageView android:id="@+id/favicon"
        android:layout_width="17dip"
        android:layout_height="17dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="4dip"
        android:layout_centerVertical="true"
        android:src="@drawable/website_default_icon"
        android:layout_alignParentLeft="true"
        />
    
    <ImageView android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:src="@drawable/tabbar_btn_close_normal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
    
     <TextView android:id="@+id/top"
            android:maxLines="1"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@id/favicon"
            android:layout_toLeftOf="@id/indicator"
        	android:layout_centerVertical="true"
			android:textAppearance="@style/bookmark_title_text"
            android:text="打开新标签"
            /> 
        

   
</RelativeLayout>
