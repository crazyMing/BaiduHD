<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_edit_bar_background"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#e5e5e5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/page_edit_bar_background"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/per_footer_select_all"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.5dip"
            android:layout_marginLeft="6.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="5.25dip"
            android:layout_weight="1.0"
            android:background="@drawable/personal_page_eidt_button_background_selector"
            android:text="@string/select_all"
            android:textColor="@drawable/button_normal_white_text"
            android:textSize="14sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/per_footer_delete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.5dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="6.0dip"
            android:layout_marginTop="5.25dip"
            android:layout_weight="1.0"
            android:background="@drawable/personal_page_eidt_button_background_selector"
            android:enabled="false"
            android:text="@string/delete"
            android:textColor="@drawable/button_normal_white_text"
            android:textSize="14sp"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>